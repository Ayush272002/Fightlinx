{
  "name": "fightlinx",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\" --config prettier.config.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write --config prettier.config.js"
    ],
    "packages/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write --config prettier.config.js"
    ]
  }
}
